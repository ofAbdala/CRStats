{
    "name": "crstatus-monorepo",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "dev": "turbo run dev",
        "dev:web": "turbo run dev --filter=web",
        "dev:mobile": "turbo run dev --filter=mobile",
        "build": "turbo run build",
        "lint": "turbo run lint",
        "clean": "turbo run clean && rm -rf node_modules"
    },
    "devDependencies": {
        "turbo": "^2.3.0",
        "typescript": "^5.6.3"
    },
    "engines": {
        "node": ">=18.0.0",
        "pnpm": ">=8.0.0"
    },
    "packageManager": "pnpm@8.15.0"
}