{
    "compilerOptions": {
        "target": "esnext",
        "lib": [
            "esnext"
        ],
        "jsx": "react-native",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true
    },
    "extends": "expo/tsconfig.base",
    "include": [
        "**/*.ts",
        "**/*.tsx",
        ".expo/types/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}